eqn1a = {\!\(
\*SubscriptBox[\(\[PartialD]\), \(t, t\)]\(u[x, t]\)\) - \!\(
\*SubscriptBox[\(\[PartialD]\), \(x, x\)]\(u[x, t]\)\) == 0, 
  u[x, 0] == Log[1 + x^2], Derivative[0, 1][u][x, 0] == 2}
sol1a = u[x, t] /. 
  NDSolve[eqn1a, u[x, t], {x, 0, 1}, {t, 0, 4}, PrecisionGoal -> 3][[
   1]]
Plot3D[sol1a, {x, 0, 1}, {t, 0, 4}, AxesLabel -> {"x", "t", "u"}, 
 Ticks -> {{0, 1, 2, 3, 4}, {0, 1}, {-3, 0}}]
